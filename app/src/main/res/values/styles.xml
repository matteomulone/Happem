<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <!--We will be using the toolbar so no need to show ActionBar-->
        <item name="android:windowActionBar">false</item>
        <item name="android:colorPrimary">#F69738</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="android:colorPrimaryDark">#1976D2</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="android:colorAccent">#FF4081</item>
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight and colorSwitchThumbNormal. -->
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- 文本 - 滑动标签标题 -->
    <style name="text_slidingTabTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_slide_title</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/selector_slide_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_slidingTabTitle_logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/logo</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_slidingTabTitle_friends">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/friends_tab</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_slidingTabTitle_notification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/notification</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_slidingTabTitle_profile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/profile</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
